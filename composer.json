{
    "name": "web-eid/ocsp-php",
    "description": "OCSP library for PHP",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Guido Gröön",
            "role": "developer"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.0.4"
    },
    "autoload": {
        "psr-4": {
            "web_eid\\ocsp_php\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "web_eid\\ocsp_php\\": [
                "tests"
            ]
        }
    },
    "require": {
        "phpseclib/phpseclib": "3.0.*"
    },
    "scripts": {
        "fix-php": [
            "prettier src/**/* --write",
            "prettier src/* --write"
        ],
        "test": "phpunit --no-coverage",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-html coverage"
        ]
    }
}
